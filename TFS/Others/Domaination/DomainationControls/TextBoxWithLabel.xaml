<UserControl x:Class="DomainationControls.TextBoxWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" FocusManager.FocusedElement="{Binding ElementName=TheTextBox}"
             d:DesignHeight="29" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>  
        <Label Name="TheLabel" Content="Label" Grid.Column="0" Margin="0,0,5,0" VerticalAlignment="Center" />
        <TextBox Name="TheTextBox" Grid.Column="1" VerticalAlignment="Center" TextChanged="TheTextBox_TextChanged" />
    </Grid>
</UserControl>
