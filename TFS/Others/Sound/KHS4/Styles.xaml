<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<LinearGradientBrush x:Key="CloseButtonBackgroundMouseOver" EndPoint="0.5,1" StartPoint="0.5,0">
		<GradientStop Color="#FFD4C7CB" Offset="0"/>
		<GradientStop Color="#FEAC2A55" Offset="1"/>
		<GradientStop Color="#FEDE0202" Offset="0.556"/>
	</LinearGradientBrush>

	<LinearGradientBrush x:Key="CloseButtonBackground" EndPoint="0.5,1" StartPoint="0.5,0">
		<GradientStop Color="#FFD4C7CB" Offset="0"/>
		<GradientStop Color="#FEAC2A55" Offset="1"/>
		<GradientStop Color="#FEAC2A55" Offset="0.556"/>
	</LinearGradientBrush>
	
	<Style x:Key="CloseButtonStyle" TargetType="Border">
		<Setter Property="Background" Value="{StaticResource CloseButtonBackground}" />
		<Style.Triggers>
			<Trigger Property="Border.IsMouseOver" Value="True">
				<Setter Property="Background" Value="{StaticResource CloseButtonBackgroundMouseOver}" />
			</Trigger>
		</Style.Triggers>
	</Style>
	<LinearGradientBrush x:Key="TitleBarBackground" EndPoint="0.5,1" StartPoint="0.5,0">
		<GradientStop Color="#FF5E659F" Offset="0"/>
		<GradientStop Color="#FF051E6A" Offset="1"/>
		<GradientStop Color="#FF051473" Offset="0.46"/>
	</LinearGradientBrush>
</ResourceDictionary>