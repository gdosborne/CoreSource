<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style
        x:Key="StandardButton"
        TargetType="Button">
        <Setter
            Property="Width"
            Value="60" />
        <Setter
            Property="Height"
            Value="24" />
        <Setter
            Property="Margin"
            Value="2.5,0" />
    </Style>
    <Style
        x:Key="CanDisableImage"
        TargetType="{x:Type Image}">
        <Style.Triggers>
            <Trigger
                Property="IsEnabled"
                Value="False">
                <Setter
                    Property="Opacity"
                    Value="0.5" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>