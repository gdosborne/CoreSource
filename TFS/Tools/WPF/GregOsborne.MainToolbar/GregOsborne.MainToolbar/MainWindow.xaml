<Window x:Class="GregOsborne.MainToolbar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GregOsborne.MainToolbar"
        mc:Ignorable="d" SizeToContent="Height" Width="800"
        Title="{Binding WindowTitle,UpdateSourceTrigger=PropertyChanged,Mode=OneWay}" 
        Closing="Window_Closing" Loaded="Window_Loaded">
    <Window.DataContext>
        <local:MainWindowView />
    </Window.DataContext>

    <Grid>
        <StackPanel Name="myStackPanel" Orientation="Horizontal" Margin="3" Height="36" IsEnabled="{Binding IsAuthenticated,UpdateSourceTrigger=PropertyChanged,Mode=OneWay}">

        </StackPanel>
    </Grid>
</Window>
