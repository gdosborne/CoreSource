<UserControl x:Class="UserControls.TextBoxWithWatermark"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UserControls"
             mc:Ignorable="d"
             d:DesignWidth="120">
    <Border Padding="3" BorderThickness="1" BorderBrush="#FF000000" VerticalAlignment="Center" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrush}}">
        <Grid>
            <TextBlock Name="_textBlock" VerticalAlignment="Center" Text="Type here..." Opacity=".4" Margin="2,0" />
            <TextBox Name="_textBox" Width="250" BorderThickness="0" VerticalAlignment="Center" Padding="0" Background="Transparent" />
        </Grid>
    </Border>
</UserControl>