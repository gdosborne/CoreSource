<UserControl x:Class="OSControls.FontAndLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="67" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Name="TheLabel" Content="Label" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Top" />
        <ComboBox Name="TheFontComboBox" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" SelectionChanged="TheFontComboBox_SelectionChanged" />
        <ComboBox Name="TheSizeComboBox" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Margin="0,2,10,2" MinWidth="60" SelectionChanged="TheSizeComboBox_SelectionChanged" />
        <ComboBox Name="TheWeightComboBox" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" SelectionChanged="TheWeightComboBox_SelectionChanged" />
    </Grid>
</UserControl>
