<Window x:Class="GregOsborne.Dialog.MessageDialog"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:v="clr-namespace:GregOsborne.Dialog"
        Title="Message Dialog" MinHeight="150" MinWidth="300"
        Icon="Resources/Application2.ico" ResizeMode="NoResize"
        ShowInTaskbar="False" WindowStartupLocation="CenterScreen"
        d:DesignHeight="327" d:DesignWidth="446"
        mc:Ignorable="d">
    <Window.DataContext>
        <v:MessageDialogView PropertyChanged="MessageDialogView_PropertyChanged" />
    </Window.DataContext>
    <Grid x:Name="LayoutRoot" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.Row="0" Width="48" Margin="5" VerticalAlignment="Top" Source="{Binding Source, Mode=OneWay}" />
        <ScrollViewer x:Name="MyScroller" Grid.Column="1" Grid.Row="0" Margin="5" Padding="0" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
            <TextBlock Width="{Binding ViewportWidth, ElementName=MyScroller}" Padding="5" FontSize="14" Foreground="#FF4A40AE" Text="{Binding MessageText, Mode=OneWay}" TextWrapping="Wrap" />
        </ScrollViewer>
        <Expander x:Name="MyExpander" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Margin="0,10" HorizontalAlignment="Left" Header="Additional information" IsExpanded="{Binding IsAdditionalInformationExpanded, Mode=TwoWay}" Visibility="{Binding AdditionalInfoVisibility, Mode=OneWay}">
            <TextBlock Width="{Binding ActualWidth, ElementName=MyExpander}" Padding="25,5,5,5" HorizontalAlignment="Left" FontSize="11" Foreground="Black" Text="{Binding AdditionalInformation, Mode=OneWay}" TextAlignment="Left" TextWrapping="Wrap" />
        </Expander>
        <Border Background="#FFF1F3FF" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="-5" BorderThickness="0,.5,0,0" BorderBrush="#FF393D78">
            <Grid>
                <Border Name="AdditionalBorder" Grid.Column="0" Margin="5" VerticalAlignment="Center" />
                <StackPanel Margin="0,10,5,10" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Width="{Binding Button1Width, Mode=OneWay}" Margin="2.5,0" Command="{Binding Button1Command}" Content="{Binding Button1Text, Mode=OneWay}" Visibility="{Binding Button1Visibility, Mode=OneWay}" />
                    <Button Width="{Binding Button2Width, Mode=OneWay}" Margin="2.5,0" Command="{Binding Button2Command}" Content="{Binding Button2Text, Mode=OneWay}" Visibility="{Binding Button2Visibility, Mode=OneWay}" />
                    <Button Width="{Binding Button3Width, Mode=OneWay}" Margin="2.5,0" Command="{Binding Button3Command}" Content="{Binding Button3Text, Mode=OneWay}" Visibility="{Binding Button3Visibility, Mode=OneWay}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>