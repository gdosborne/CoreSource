<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Greg.Osborne.Installer"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <SolidColorBrush x:Key="InstallerTextBrush" Color="#FFFFC1D7" />
    <SolidColorBrush x:Key="SeparatorLineBrush" Color="#88F0F0F0"/>
    <SolidColorBrush x:Key="TabBottomBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="StandardTextBrush" Color="#FF00FF90" />
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFF0000" />
    <SolidColorBrush x:Key="ItemHighlightBrush" Color="#FFFD7474" />
    <SolidColorBrush x:Key="ItemHighlightTextBrush" Color="#FF00FF90" />

    <system:Double x:Key="InstructionAreaWidth">400</system:Double>
    <system:Double x:Key="StandardFontSize">11.0</system:Double>
    <system:Double x:Key="TabFontSize">16.0</system:Double>
    <system:Double x:Key="HeaderFontSize">36.0</system:Double>
    <system:Double x:Key="InstructionMinorFontSize">24.0</system:Double>
    <system:Double x:Key="TooltipTextFontSize">10.0</system:Double>
</ResourceDictionary>