<UserControl x:Class="OzMiniDB.Builder.Controls.PWordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OzMiniDB.Builder.Controls"
             BorderThickness="1"
             mc:Ignorable="d" d:DesignWidth="400">
    <Border Background="{Binding ElementName=PassBox,Path=Background}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <PasswordBox x:Name="PassBox" Grid.Column="0" BorderThickness="0" />
            <TextBlock x:Name="ShowPWordText" Grid.Column="1" Margin="5,3,5,3">
                <Hyperlink TextDecorations="None">
                    <TextBlock Text="&#xE7B3;" FontFamily="Segoe Fluent Icons" FontSize="14" />
                </Hyperlink>
            </TextBlock>
        </Grid>
    </Border>
</UserControl>
