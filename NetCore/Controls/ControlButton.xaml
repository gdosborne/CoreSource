<UserControl x:Class="Controls.Core.ControlButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls.Core"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="20">
    <Border Name="OuterBorder" VerticalAlignment="Top" Padding="5">
        <local:FontIcon x:Name="ControlIcon" HorizontalAlignment="Center" 
                        VerticalAlignment="Center" Glyph="&#xE8BB;" 
                        FontFamily="Segoe Fluent Icons" FontSize="10"/>
    </Border>
</UserControl>
