<UserControl x:Class="Controls.Core.MultiFontIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls.Core"
             mc:Ignorable="d" 
             d:DesignHeight="166.337" d:DesignWidth="171.782">
    <Grid>
        <local:FontIcon x:Name="MainIcon" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Glyph="&#xE909;" FontSize="160"/>
        <Border Name="Blackout" HorizontalAlignment="Right"
                VerticalAlignment="Bottom" Padding="5">
            <local:FontIcon x:Name="SecondaryIcon" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                        Glyph="&#xE107;" FontSize="80" />
        </Border>
    </Grid>
</UserControl>
