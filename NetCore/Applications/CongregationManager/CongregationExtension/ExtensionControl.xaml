<UserControl x:Class="CongregationExtension.ExtensionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CongregationExtension"
             xmlns:views="clr-namespace:CongregationExtension.ViewModels"
             xmlns:controls="clr-namespace:Controls;assembly=Controls.Core"
             mc:Ignorable="d"  
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="MainGrid">
        <Grid.DataContext>
            <views:ExtensionControlViewModel />
        </Grid.DataContext>

        <TabControl TabStripPlacement="Left" ItemsSource="{Binding Congregations}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </Grid>
</UserControl>
