    <!-- Windows -->
    
    <Style TargetType="Window" x:Key="StandardWindow">
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="AllowsTransparency" Value="true" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="ResizeMode" Value="CanResizeWithGrip" />
        <Setter Property="Icon" Value="/Resources/CM.ico" />
    </Style>

    <!-- Borders -->

    <Style TargetType="Border" x:Key="StandardWindowBorder">
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
        <Setter Property="BorderThickness" Value="1,0,1,1" />
        <Setter Property="BorderBrush" Value="{DynamicResource WindowBorderBrush}" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <Style TargetType="Border" x:Key="MainToolbarBorder">
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
        <Setter Property="BorderThickness" Value="1,0,1,1" />
        <Setter Property="BorderBrush" Value="{DynamicResource WindowBorderBrush}" />
    </Style>

    <Style TargetType="Border" x:Key="CaptionBorder">
        <Setter Property="Background" Value="{DynamicResource CaptionBackground}" />
        <Setter Property="BorderThickness" Value="1,1,1,0" />
        <Setter Property="BorderBrush" Value="{DynamicResource WindowBorderBrush}" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="CornerRadius" Value="5,5,0,0" />
    </Style>

    <Style TargetType="Border" x:Key="WindowBodyBorder">
        <Setter Property="BorderThickness" Value="1,0,1,1" />
        <Setter Property="BorderBrush" Value="{DynamicResource WindowBorderBrush}" />
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
    </Style>

    <Style TargetType="Border" x:Key="ImageBorder">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource WindowBorderBrush}" />
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="Margin" Value="10,0,0,0" />
    </Style>

    <Style TargetType="Border" x:Key="ErrorBorder">
        <Setter Property="Background" Value="{DynamicResource ErrorBackground}" />
        <Setter Property="CornerRadius" Value="0,0,10,10" />
        <Setter Property="Padding" Value="5,5,5,5" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style TargetType="Border" x:Key="ControlBorder">
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="BorderBrush" Value="{DynamicResource LightBorderBrush}" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <Style TargetType="Border" x:Key="WrapBorder">
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="BorderBrush" Value="{DynamicResource LightBorderBrush}" />
        <Setter Property="Margin" Value="10,10,0,10" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="2" />
    </Style>

    <!-- TextBlocks -->

    <Style TargetType="TextBlock" x:Key="StandardWindowCaptionTextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="15,5,5,7" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="Foreground" Value="{DynamicResource CaptionForeground}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>
    
    <Style TargetType="TextBlock" x:Key="ErrorTextBlock">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource ErrorForeground}" />
    </Style>

    <Style TargetType="TextBlock" x:Key="TreeViewTextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="10,4" />
    </Style>

    <Style TargetType="TextBlock" x:Key="TabHeader">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="5,0,5,0" />
        <Setter Property="Foreground" Value="{DynamicResource TabTextForeground}" />
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
    </Style>

    <Style TargetType="TextBlock" x:Key="TabHeaderTop">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="5,-5" />
    </Style>

    <Style TargetType="TextBlock" x:Key="ToolbarLabel">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="2,2,12,2" />
    </Style>

    <Style TargetType="TextBlock" x:Key="ToolbarButtonTextBlock">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style TargetType="TextBlock" x:Key="WindowLabel">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="Margin" Value="0,5,10,5" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
    </Style>

    <Style TargetType="TextBlock" x:Key="ReverseWindowLabel" BasedOn="{StaticResource WindowLabel}">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="Margin" Value="0,5,10,5" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource WindowBackground}" />
    </Style>

    <Style TargetType="TextBlock" x:Key="SectionHeader">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="{DynamicResource LargeFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
    </Style>

    <Style TargetType="TextBlock" x:Key="WindowHeaderText">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Justify" />
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
    </Style>

    <Style TargetType="TextBlock" x:Key="ControlTextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!-- Menu items -->

    <Style TargetType="Menu">
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Background" Value="{DynamicResource MenuBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource MenuForeground}" />
        <Setter Property="BorderThickness" Value="1,0,1,1" />
        <Setter Property="BorderBrush" Value="{DynamicResource WindowBorderBrush}" />
    </Style>

    <Style TargetType="MenuItem">
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Background" Value="{DynamicResource MenuItemBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource MenuItemForeground}" />
    </Style>

    <!-- Font Icons -->

    <Style TargetType="mycontrols:FontIcon" x:Key="MenuItemIcon">
        <Setter Property="FontFamily" Value="{DynamicResource PeopleFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource SmallFontSize}" />
    </Style>

    <Style TargetType="mycontrols:FontIcon" x:Key="AlternateMenuItemIcon">
        <Setter Property="FontFamily" Value="{DynamicResource GlyphFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource SmallFontSize}" />
    </Style>

    <!--<Style TargetType="mycontrols:MultiFontIcon" x:Key="AltMenuItemIcon">
        <Setter Property="FontFamily" Value="{DynamicResource GlyphFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource SmallFontSize}" />
        <Setter Property="Background" Value="{DynamicResource MenuItemBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource MenuItemForeground}" />
        <Setter Property="SecondaryForeground" Value="{DynamicResource MenuItemForeground}" />
    </Style>-->

    <Style TargetType="mycontrols:FontIcon" x:Key="ErrorIcon">
        <Setter Property="FontFamily" Value="{DynamicResource PeopleFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource XLargeFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource ErrorForeground}" />
        <Setter Property="Margin" Value="10,0" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>

    <Style TargetType="mycontrols:FontIcon" x:Key="TabIcon">
        <Setter Property="FontFamily" Value="{DynamicResource GlyphFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Margin" Value="0,0,5,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style TargetType="mycontrols:FontIcon" x:Key="TabIconX">
        <Setter Property="FontFamily" Value="{DynamicResource PeopleFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Margin" Value="0,0,5,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style TargetType="mycontrols:FontIcon" x:Key="TreeViewIcon">
        <Setter Property="FontFamily" Value="{DynamicResource PeopleFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Margin" Value="10,0,5,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
    </Style>

    <Style TargetType="mycontrols:FontIcon" x:Key="ToolbarIcon" BasedOn="{StaticResource MenuItemIcon}">
        <Setter Property="FontSize" Value="{DynamicResource LargeFontSize}" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
    </Style>

    <Style TargetType="mycontrols:FontIcon" x:Key="ControlIcon" BasedOn="{StaticResource MenuItemIcon}">
        <Setter Property="FontSize" Value="{DynamicResource XXSmallFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource ControlForeground}" />
    </Style>

    <!-- Control Buttons -->

    <Style TargetType="mycontrols:ControlButton">
        <Setter Property="Background" Value="{DynamicResource ControlBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource ControlForeground}" />
        <Setter Property="GlyphFontFamily" Value="{DynamicResource GlyphFontFamily}" />
        <Setter Property="GlyphSize" Value="{DynamicResource XXSmallFontSize}" />
        <Setter Property="Width" Value="40" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="MouseOverBackground" Value="{DynamicResource ControlMouseOverBackground}" />
        <Setter Property="MouseOverForeground" Value="{DynamicResource ControlMouseOverForeground}" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>

    <!-- Toggleswitches -->

    <Style TargetType="mycontrols:ToggleSwitch">
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FillBrush" Value="Transparent" />
        <Setter Property="OnFillBrush" Value="{DynamicResource ToggleSwitchBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
        <Setter Property="OnThumbBrush" Value="{DynamicResource WindowTextForeground}" />
        <Setter Property="OffContent" Value="Disabled" />
        <Setter Property="OnContent" Value="Enabled" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,10,0" />
    </Style>

    <!-- TreeView Items -->

    <Style TargetType="TreeViewItem">
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- Toolbar Items -->

    <Style TargetType="ToolBarTray">
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
    </Style>

    <Style TargetType="ToolBar">
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
    </Style>

    <!-- StackPanels -->

    <Style TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="Margin" Value="0,5,0,10" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style TargetType="StackPanel" x:Key="ToolbarButtonStackPanel" BasedOn="{x:Null}">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style TargetType="StackPanel" x:Key="WindowButtonPanel" BasedOn="{x:Null}">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Margin" Value="5,5,0,5" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>
    
    <!-- Grid -->

    <Style TargetType="Grid" x:Key="MainWindowGrid">
        <Setter Property="Margin" Value="10" />
    </Style>

    <!-- TextBoxes -->

    <Style TargetType="TextBox" x:Key="WindowTextField">
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="Margin" Value="0,5,0,5" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
    </Style>

    <Style TargetType="TextBox" x:Key="MultilineWindowTextField" BasedOn="{StaticResource WindowTextField}">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="AcceptsReturn" Value="True" />
        <Setter Property="TextAlignment" Value="Left" />
    </Style>

    <Style TargetType="TextBox" x:Key="TerritoryNumberTextBox" BasedOn="{StaticResource WindowTextField}">
        <Setter Property="AcceptsReturn" Value="False" />
        <Setter Property="TextAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="CharacterCasing" Value="Upper" />
    </Style>

    <!-- Buttons -->

    <Style TargetType="Button" x:Key="BaseButton">
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}" />
        <Setter Property="Margin" Value="10,5,0,5" />
        <Setter Property="MinWidth" Value="70" />
    </Style>
    
    <Style TargetType="Button" x:Key="StandardButton" BasedOn="{StaticResource BaseButton}">
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Width" Value="90" />
    </Style>

    <Style TargetType="Button" x:Key="ToolbarButton">
        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
    </Style>

    <Style TargetType="Button" x:Key="EndButton">
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="20" />
        <Setter Property="Padding" Value="2" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
    </Style>

    <!-- Hyperlinks -->

    <Style TargetType="Hyperlink" x:Key="ControlHyperlink">
        <Setter Property="TextDecorations" Value="None" />
    </Style>

    <!-- ListBoxes -->

    <Style TargetType="ListBox">
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="BorderBrush" Value="{StaticResource WindowBorderBrush}" />
    </Style>

    <!-- CheckBoxes -->

    <Style TargetType="CheckBox">
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
    </Style>

    <Style TargetType="CheckBox" x:Key="PrivilegeCheckBox" BasedOn="{x:Null}">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Width" Value="290" />
    </Style>

    <!-- RadioButtons -->

    <Style TargetType="RadioButton">
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,3,10,0" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
    </Style>

    <!-- DatePickers -->

    <Style TargetType="DatePicker">
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,3,0,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- WrapPanels -->

    <Style TargetType="WrapPanel" x:Key="PrivilegeWrapPanel">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Margin" Value="0,0,0,0" />
    </Style>

    <!-- ItemsControls -->

    <Style TargetType="ItemsControl" x:Key="PriviledgeItems">
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
        <Setter Property="Width" Value="630" />
    </Style>

    <!-- ComboBoxes -->

    <Style TargetType="ComboBox" x:Key="PrimaryComboBox">
        <Setter Property="FontFamily" Value="{DynamicResource StandardFont}" />
        <Setter Property="FontSize" Value="{DynamicResource StandardFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
        <Setter Property="Margin" Value="0,5" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- ScrollViewers -->

    <Style TargetType="ScrollViewer" x:Key="StandardScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Hidden" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <Style TargetType="ScrollViewer" x:Key="RecycleScrollViewer" BasedOn="{StaticResource StandardScrollViewer}">
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
    </Style>

    <!-- GridViewColumnHeaders -->

    <Style TargetType="GridViewColumnHeader">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Padding" Value="10,0,0,0" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />    
    </Style>
    
    <!-- GridSplitters -->

    <Style TargetType="GridSplitter" x:Key="VerticalSplitter">
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Width" Value="4" />
        <Setter Property="BorderBrush" Value="{DynamicResource WindowTextForeground}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>
    
    <!-- Images -->

    <Style TargetType="Image">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="MinHeight" Value="100" />
        <Setter Property="MinWidth" Value="100" />
        <Setter Property="Stretch" Value="UniformToFill" />
    </Style>

    <!-- ListViewItem -->
    
    <Style TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
    </Style>
    <Style TargetType="DataGridCell">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
    </Style>
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
    </Style>
    
    <!-- TabItems -->
    <Style TargetType="TabItem">
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
    </Style>

    
    <Style TargetType="TabControl">
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
    </Style>
    
    <!-- Group Box -->
    <Style TargetType="GroupBox">
        <Setter Property="Background" Value="{DynamicResource WindowBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource WindowTextForeground}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource LightBorderBrush}" />
    </Style>

</ResourceDictionary>